{
  "name": "@dcmjs/commands",
  "version": "0.0.1",
  "description": "Command Line Tools for dcmjs, dicomweb-client and dimse",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "DCMJS",
    "DICOM",
    "DICOMweb"
  ],
  "author": "Bill Wallace <bill.wallace@radicalimaging.com>",
  "contributors": [
    "Bill Wallace <bill.wallace@radicalimaging.com>"
  ],
  "engines": {
    "node": ">=14.18.1",
    "npm": ">=6.14.15",
    "yarn": ">=1.22.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dcmjs-org/dcmjs-commands"
  },
  "homepage": "https://github.com/dcmjs-org/dcmjs-commands#readme",
  "license": "MIT",
  "main": "src/index.js",
  "module": "dist/index.js",
  "exports": {
    "require": "./src/index.js",
    "node": "./dist/index.js"
  },
  "directories": {
    "src": "src",
    "bin": "bin"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "bin": {
    "dcmjs": "bin/dcmjs.js",
    "dicomwebjs": "bin/dicomwebjs.js",
    "dimsejs": "bin/dimsejs.js"
  },
  "jest": {
    "verbose": true
  },
  "dependencies": {
    "commander": "^12.1.0",
    "crypto": "^1.0.1",
    "dcmjs": "^0.29.5",
    "dcmjs-dimse": "0.1.27",
    "dicomweb-client": "link:dicomweb-client",
    "jsdom": "^26.1.0",
    "loglevel": "^1.9.2",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "eslint": "^9.6.0",
    "husky": "^1.3.1",
    "jest": "^29.7.0",
    "lint-staged": "^13.1.2",
    "must": "^0.13.4",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "test": "jest --config ./jest.config.js",
    "build": "bun build src/index.js --format esm --target node --outdir dist --",
    "clean": "rimraf dist",
    "dicomwebjs": "bun run build && bun run bin/dicomwebjs.js --",
    "link:exec": "npm install -g && npm link",
    "lint": "npx eslint --color \"**/*.{js,mjs,cjs}\"",
    "lint:fix": "npx eslint --fix --color \"**/*.{js,mjs,cjs}\""
  }
}
